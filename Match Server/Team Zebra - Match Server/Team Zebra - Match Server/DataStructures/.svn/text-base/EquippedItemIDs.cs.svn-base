namespace Zebra.DataStructures
{
    /// <summary>
    /// Structure to represent a character's equipped
    /// item IDs.
    /// </summary>
    public struct EquippedItemIDs
    {
        /// <summary>
        /// hat slot
        /// </summary>
        public uint head;

        /// <summary>
        /// chest slot
        /// </summary>
        public uint chest;

        /// <summary>
        /// gloves slot
        /// </summary>
        public uint hands;

        /// <summary>
        /// pants slot
        /// </summary>
        public uint legs;

        /// <summary>
        /// shoes slot
        /// </summary>
        public uint feet;

        /// <summary>
        /// first ring slot
        /// </summary>
        public uint ring1;

        /// <summary>
        /// second ring slot
        /// </summary>
        public uint ring2;

        /// <summary>
        /// melee weapon slot
        /// </summary>
        public uint melee;

        /// <summary>
        /// first weapon slot
        /// </summary>
        public uint primaryWeapon;

        /// <summary>
        /// second weapon slot
        /// </summary>
        public uint secondaryWeapon;

        /// <summary>
        /// first item slot
        /// </summary>
        public uint item1;

        /// <summary>
        /// second item slot
        /// </summary>
        public uint item2;
    }
}
